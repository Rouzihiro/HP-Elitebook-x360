#!/bin/zsh

# Check if redshift is installed
if ! command -v redshift &>/dev/null; then
    echo "Error: 'redshift' is not installed. Install it with: sudo apt install redshift"
    exit 1
fi

# Check if redshift is currently active
if redshift -p &>/dev/null; then
    # Deactivate redshift if it's active
    redshift -x
    echo "Redshift deactivated, screen color temperature reset to default."
else
    # Activate redshift with a color temperature of 4000K
    redshift -O 4000
    echo "Redshift activated, screen color temperature set to 4000K."
fi

